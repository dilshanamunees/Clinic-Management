<div class="content-fluid"></div>
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-center">
                        <h1>LOG IN</h1>
                    </div>


                       {{#if messages}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                   
                    {{messages.error}} 
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">Ã—</span>
                    </button>
                  </div>

       {{/if}}
                     <form action="/login" method="POST">
    

                    <div class="row justify-content-center my-2 mx-4">
                        <p class="mx-2">Choose one of the following login methods.</p>
                    </div>
                   
                    
                   
                    <div class="row mx-4">
                        
                        <div class="col-md-12">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text " id="basic-addon1"><i
                                            class="fas fa-envelope"></i></span>
                                </div>
                                <input type="email" name="email" class="form-control " placeholder="Email" aria-label="email"
                                    aria-describedby="basic-addon1">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" name="password"class="form-control" placeholder="Password" aria-label="password"
                                    aria-describedby="basic-addon1">
                            </div>
                        </div>
                    </div>
                    <div class="row mx-4">
                        <div class="col-md-6 mt-2">
                            <div class="input-group-lg ">
                                <div class="input-group-append account " id="button-addon3" style="width:100px">
                                    <button type="submit" class="btn account w-100"><span class="btn-text">sign in
                                            </span></button>
                                   

                                    <!-- <button type="button" class="btn mayor w-50">
                                        <i class="fas fa-angle-right fa-2x"></i></button> -->
                                </div>
                            </div>

                        </div>
                    </div>
                                   
    
                      <hr class="mx-5">
                     <div class="row mx-4 ">
                        
                        <div class="col-lg-4 my-2">
                            <div class="input-group-lg">
                                <div class="input-group-prepend facebook2" id="button-addon3">
                                    <button type="button" class="btn w-50">
                                        <i class="fab fa-facebook-f fa-2x"></i></button>
                                    <button type="button" class="btn w-100 facebook "><a href="/auth/facebook"><span
                                            class="btn-text">Facebook</span></a></button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 my-2">
                            <div class="input-group-lg">
                                <div class="input-group-prepend google2" id="">
                                    <button type="button" class="btn w-50">
                                        <i class="fab fa-google-plus-g fa-2x"></i></button>
                                    <button type="button" class="btn w-100 google"> <a href="/auth/google" ><span
                                            class="btn-text">Google+</span></a></button>
                                </div>
                            </div>
                        </div>

                    </div>
                   
                     <hr class="mx-5">
                     <div class="row mx-4 ">
                        
                        <div class="col-lg-4 my-2">
                          <button class=" btn btn-outline-secondary " style="float:inline-end">
                          <a href="/register" >Don't have an account? Register here</a></button>
                        </div>
                </div>
            </div>
        </div>
        </form>

        
    </div>

